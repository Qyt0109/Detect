#: import FadeTransition kivy.uix.screenmanager.FadeTransition
MainLayout:

<MainLayout>:
    orientation: 'vertical'
    HeaderLayout:

    ScreenLayoutManager:

    FooterLayout:

<HeaderLayout>:
    Button:
        text: "text"
    BoxLayout:
        Image:
            source:"Frontend/Images/Map/map.png"

<FooterLayout>:
    size_hint_y: None
    height: "64px"
    Button:
        Image:
            source:root.capturing_image_button_image_path
            center_x: self.parent.center_x
            center_y: self.parent.center_y
    Button:
        Image:
            source:root.image_gallery_button_image_path
            center_x: self.parent.center_x
            center_y: self.parent.center_y

<ScreenLayoutManager>:
    transition: FadeTransition(duration=1.2)
    CapturingImageScreenLayout:
    CapturedImageScreenLayout:
        
<CapturingImageScreenLayout>:
    Label:
        text:'CapturingImageScreenLayout'
    
<CapturedImageScreenLayout>:
    Label:
        text:'CapturedImageScreenLayout'

<ImageGalleryScreenLayout>:
